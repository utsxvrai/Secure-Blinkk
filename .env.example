# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRY=7d

# DynamoDB Configuration
# For AWS Production - leave DYNAMODB_ENDPOINT empty
# For Local Development - set to http://localhost:8000
AWS_REGION=us-east-1
DYNAMODB_ENDPOINT=http://localhost:8000

# AWS Credentials (for local development with DynamoDB local)
AWS_ACCESS_KEY_ID=local
AWS_SECRET_ACCESS_KEY=local

# DynamoDB Table Names
USERS_TABLE=users-dev
PROJECTS_TABLE=projects-dev
API_KEYS_TABLE=api_keys-dev
AUDIT_TABLE=audit_logs-dev
ORGANIZATIONS_TABLE=organizations-dev

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# ============================================
# Production Configuration (AWS Deployment)
# ============================================
# When deploying to AWS:
# 1. Remove or comment out DYNAMODB_ENDPOINT
# 2. Set NODE_ENV=production
# 3. Use secure credentials via AWS Secrets Manager
# 4. Update table names to remove '-dev' suffix
# 5. Use different JWT_SECRET from Secrets Manager
